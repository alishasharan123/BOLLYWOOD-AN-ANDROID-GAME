<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.second">


    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m21"
        android:background="@mipmap/piink"
        />

    <Button
        android:text="I"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m27"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/piink"
        />

    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m26"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m27"
        android:layout_marginEnd="11dp"
        android:background="@mipmap/p4"
        />

    <Button
        android:text="I"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m25"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m26"
        android:background="@mipmap/piink"
        />

    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/p4"
        />

    <Button
        android:text="A"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m23"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m24"
        android:layout_marginEnd="13dp"
        android:background="@mipmap/piink"
        />

    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m22"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m23"
        android:layout_marginEnd="13dp"
        android:background="@mipmap/p4"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/m2h"
        android:id="@+id/m2turns"
        android:background="@mipmap/piink"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/m24" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m2ed"
        android:layout_centerVertical="true"
        android:background="@mipmap/piink"
        android:layout_toEndOf="@+id/m21"
        android:layout_alignParentStart="true" />


    <Button
        android:text="ENTER"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m2enter"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/m2h"
        android:background="@mipmap/piink"
        />

    <Button
        android:text="HINT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m2h"
        android:background="@mipmap/piink"
        android:layout_below="@+id/m2enter"
        android:layout_alignStart="@+id/m25"
        android:layout_marginStart="11dp"
        android:layout_marginTop="85dp" />

    <Button
        android:text="NEXT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m2next"
        android:background="@mipmap/piink"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/m2enter" />

</RelativeLayout>
