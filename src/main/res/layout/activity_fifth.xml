<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fifth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.fifth">

    <Button
        android:text="_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m51"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/ty"
        />

    <Button
        android:text="NEXT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m5next"
        android:background="@mipmap/ty"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/m52" />

    <Button
        android:text="A"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m52"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m51"
        android:background="@mipmap/bl"
        />

    <Button
        android:text="_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m54"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/m53"
        android:background="@mipmap/bl"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/m5h"
        android:id="@+id/m5turns"
        android:background="@mipmap/ty"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/m54" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m5ed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/m25"
        android:background="@mipmap/ty"
        />

    <Button
        android:text="ENTER"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m5enter"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/m5h"
        android:background="@mipmap/bl"
        />

    <Button
        android:text="HINT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginBottom="77dp"
        android:id="@+id/m5h"
        android:background="@mipmap/bl"
        android:layout_marginStart="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/m54" />

    <Button
        android:text="A"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m53"
        android:background="@mipmap/ty"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m52"
        android:layout_marginStart="23dp" />

    <Button
        android:text="_"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m55"
        android:background="@mipmap/ty"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/m5enter"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="I"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/m56"
        android:background="@mipmap/bl"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
