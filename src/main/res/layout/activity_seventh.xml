<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seventh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.seventh">
    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m71"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/g2"
        />

    <Button
        android:text="NEXT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m7next"
        android:background="@mipmap/g2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/m72" />
    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m76"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/g3"
        />

    <EditText
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m7ed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/m25"
        android:background="@mipmap/g2"
        />

    <Button
        android:text="ENTER"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:id="@+id/m7enter"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/m7h"
        android:background="@mipmap/g3"
        />

    <Button
        android:text="U"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m72"
        android:background="@mipmap/g3"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/m7ed"
        android:layout_marginEnd="29dp" />

    <Button
        android:text="A"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m75"
        android:background="@mipmap/g2"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/m7enter" />

    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m74"
        android:background="@mipmap/g3"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m7enter" />

    <Button
        android:text="_"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/m73"
        android:background="@mipmap/g2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m72" />

    <Button
        android:text="HINT"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/m7h"
        android:background="@mipmap/g3"
        android:layout_above="@+id/m7next"
        android:layout_toEndOf="@+id/m7next" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:id="@+id/m7turns"
        android:background="@mipmap/g2"
        android:layout_alignTop="@+id/m7h"
        android:layout_alignParentStart="true" />


</RelativeLayout>
