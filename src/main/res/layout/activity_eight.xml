<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.eight">

    <Button
        android:text="_"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m81"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/b2"
        />

    <Button
        android:text="_"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m82"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m81"
        android:background="@mipmap/bl2"
        />

    <Button
        android:text="_"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m85"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/b2"
        />

    <Button
        android:text="O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m84"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/m83"
        android:background="@mipmap/bl2"
        android:layout_alignParentTop="true" />

    <Button
        android:text="O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/m83"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/b2"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/m8h"
        android:id="@+id/m8turns"
        android:background="@mipmap/b2"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/m84" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m8ed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/m25"
        android:background="@mipmap/b2"
        />

    <Button
        android:text="ENTER"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m8enter"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/m8h"
        android:background="@mipmap/bl2"
        />

    <Button
        android:text="HINT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m8h"
        android:layout_marginEnd="14dp"
        android:background="@mipmap/bl2"
        android:layout_below="@+id/m8enter"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="72dp" />

    <Button
        android:text="NEXT"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/m8next"
        android:background="@mipmap/bl2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/m82" />

</RelativeLayout>
