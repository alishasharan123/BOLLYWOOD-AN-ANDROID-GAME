<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sixth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.sixth">

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m61"
        android:layout_alignParentTop="true"
        android:background="@mipmap/purp"
        />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m66"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/p4"
        />

    <Button
        android:text="ENTER"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/m6ed"
        android:layout_toEndOf="@+id/m64"
        android:background="@mipmap/p4"

        android:id="@+id/m6enter"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m6ed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/m64"
        android:background="@mipmap/purp"

        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:id="@+id/m6turns"
        android:background="@mipmap/purp"
        android:layout_alignTop="@+id/m6h"
        android:layout_toStartOf="@+id/m6h" />

    <Button
        android:text="HINT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@mipmap/p4"

        android:id="@+id/m6h"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/m6enter"
        android:layout_alignStart="@+id/m64"
        android:layout_marginStart="18dp" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m63"
        android:layout_marginStart="11dp"
        android:background="@mipmap/purp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m62" />

    <Button
        android:text="I"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m64"
        android:layout_marginStart="7dp"
        android:background="@mipmap/p4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m63" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m62"
        android:layout_marginStart="13dp"
        android:background="@mipmap/p4"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m61" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m65"
        android:background="@mipmap/purp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m64"
        android:layout_marginStart="8dp" />

    <Button
        android:text="NEXT"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:id="@+id/m6next"
        android:layout_marginBottom="25dp"
        android:background="@mipmap/purp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/m6enter" />


</RelativeLayout>
