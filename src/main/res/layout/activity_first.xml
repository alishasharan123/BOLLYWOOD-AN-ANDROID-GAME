<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alisha.justguess2.first">
    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m11"
        android:layout_alignParentTop="true"
        android:background="@mipmap/gb"
        />

    <Button
        android:text="ENTER"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/m1ed"
        android:layout_toEndOf="@+id/m14"
        android:background="@mipmap/ty"

        android:id="@+id/m1enter"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:hint="enter your letter"
        android:ems="10"
        android:id="@+id/m1ed"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/m14"
        android:background="@mipmap/gb"

        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:id="@+id/m1turns"
        android:background="@mipmap/gb"
        android:layout_alignTop="@+id/m1h"
        android:layout_toStartOf="@+id/m1h" />

    <Button
        android:text="HINT"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@mipmap/ty"

        android:id="@+id/m1h"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/m1enter"
        android:layout_alignStart="@+id/m14"
        android:layout_marginStart="18dp" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m13"
        android:layout_marginStart="11dp"
        android:background="@mipmap/gb"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m12" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m14"
        android:layout_marginStart="7dp"
        android:background="@mipmap/ty"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m13" />

    <Button
        android:text="A"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m12"
        android:layout_marginStart="13dp"
        android:background="@mipmap/ty"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/m11" />

    <Button
        android:text="_"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m16"
        android:background="@mipmap/ty"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/m1h" />

    <Button
        android:text="A"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/m15"
        android:background="@mipmap/gb"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/m16"
        android:layout_marginEnd="14dp" />

    <Button
        android:text="NEXT"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:id="@+id/m1next"
        android:layout_marginBottom="19dp"
        android:background="@mipmap/gb"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/m1enter" />
</RelativeLayout>


